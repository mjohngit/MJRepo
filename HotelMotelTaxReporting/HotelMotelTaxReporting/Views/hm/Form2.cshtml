@model HotelMotel.Business.ViewModels.FormBViewmodel

@{
    ViewBag.Title = "Form 2";
}

<p></p>
<div class="row" style="margin-bottom: 20px;">
    <div style="width: 600px; margin: 2px 0 30px 170px; text-align: justify;">
        <section id="FormI">
            @using (@Html.BeginForm("Form2", "hm", FormMethod.Post))
            {
                @* @using (Ajax.BeginForm("Form2", "hm", null, FormMethod.Post)) {*@
                @Html.AntiForgeryToken()

                <div class="container">
                    <div style="border: 1px solid; width: 700px;">
                        <div class="text-center">
                            <h2 style="text-decoration: underline; color: #E87D3B; text-align: center;"> Hotel-Motel Tax Report System</h2>
                            <p>
                                <h4>@Session["LoggedCityName"] (@Session["LoginId"])</h4>
                            </p>
                        </div> <hr />
                        <div class="well" id="dPayments" name="dPayments" style="width: 650px; margin: 0 auto; margin-top: -5px;">
                            <div style="color: maroon; padding-top: -20px; width: 550px; margin: 0 auto;">
                                <div style="margin: 0 auto; text-align: center; border: #369 1px solid; height: 40px;">@{Html.RenderPartial("Partials/_Menu");}</div>
                                <div style="font-size: 20px; text-align: center; padding-top: 10px;">Section II: Tax Revenues Received - @ViewBag.sYear</div><p></p>
                                <div style="font-size: 12px; width: 525px; text-align: justify;">
                                    Based on your government's specific legal Tax Authorization Paragraph from O.C.G.A. 48-13-51 as selected in Part II, enter below the expenditures made this report year in each category displayed below.

                                    <p style="font-size: 14px; font-weight: bolder; color: crimson;">

                                    </p>
                                </div>

                                <div style="margin-top: 20px; width: 98%;">
                                    <p style="font-size: 17px; font-weight: normal; margin: 0 auto; text-align: center;">Enter the amount expended for each of the following</p><br />
                                    <div id="divPurposeAmounts">
                                        @{Html.RenderPartial("Partials/_PurposeAmounts", Model);}
                                    </div>
                                    <div id="divContracts">
                                        @*@Html.Partial("Partials/_ContractDmo", Model);*@
                                        @{Html.RenderPartial("Partials/_ContractDmo", Model);}
                                        @*@Html.EditorFor(x => x.DmoResultses)*@
                                    </div>
                                    <div style="height: 10px;"></div>
                                    <div id="divParks">
                                        @{Html.RenderPartial("Partials/_ContractParks", Model);}
                                    </div>

                                    
                                    <table>
                                        <tr>
                                            <td style="width: 50%" nowrap="nowrap">
                                                @*@Html.HtmlLink("Mainmenu", "Main Menu", new { style = "font-size: 18px; color: green; margin-left: 5px;" })*@
                                                @*<input type="button" class="btn btn-info" style="width: 130px; font-weight: bold;" value="Main Menu" onclick="location.href='@Url.Action("Mainmenu", "Hm")'" />*@
                                                <button type="button" class="btn btn-info" style="font-weight: bold;" value="Main Menu" onclick="location.href='@Url.Action("Mainmenu", "Hm")'">
                                                    <span class="glyphicon glyphicon-list"></span>&nbsp;Main Menu
                                                </button>
                                            </td>
                                            <td style="width: 23%" nowrap="nowrap">
                                                @*<input type="button" class="btn btn-primary" style="width: 130px; font-weight: bold;" value="Log Out" onclick="location.href='@Url.Action("LogOff", "Hm")'" />*@
                                            </td>
                                            @if (!Convert.ToBoolean(Session["CertificationComplete"]))
                                            {
                                                <td style="width: 23%" nowrap="nowrap">
                                                    &nbsp;&nbsp;<input type="Submit" class="btn btn-primary" style="width: 150px; font-weight: bold;" id="btnSubmit" name="btnSubmit" value="Save Section II" />&nbsp;&nbsp;
                                                </td>
                                                @*<td>
                                                    <button type="submit" class="btn btn-primary" style="font-weight: bold; width: 155px;" value="Save Section II">
                                                        <span class="glyphicon glyphicon-save"></span>&nbsp;&nbsp;Save Section II
                                                    </button>
                                                </td>*@
                                            }
                                            else
                                            {
                                                <td style="width: 25%" nowrap="nowrap">
                                                    <input type="button" class="btn btn-info" style="width:215px; font-weight: bold;" title="Section II" value="Printable Version - Section II" id="btnForm2Print" name="btnForm2Print" onclick="location.href='@Url.Action("Form2", "Print")'" />
                                                </td>
                                            }
                                        </tr>
                                        <tr>
                                            <td colspan="3" style="text-align: center; font-weight: bold; font-size: 15px;">
                                               <br/> If you have questions, send an email to:  <a href="mailto:dca.research@dca.ga.gov" style="color: green">dca.research@dca.ga.gov</a>
                                            </td>
                                        </tr>
                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div style="height: 7px;">
                            @Html.Hidden("hidCertificationComplete", Session["CertificationComplete"])
                        </div>
                    </div>
                </div>
            }
        </section>
        @Scripts.Render("~/bundles/jquery")
        <script type="text/javascript" src="~/Scripts/app/HMCommon.js"></script>
        <script type="text/javascript" src="~/Scripts/app/Form2.js"></script>

    </div>
</div>
